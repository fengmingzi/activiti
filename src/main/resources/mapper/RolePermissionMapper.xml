<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.main.activity.dao.RolePermissionMapper">
    <resultMap id="rolePermissionMap" type="com.main.activity.model.RolePermission">
        <id column="uid" property="rid" javaType="long" jdbcType="BIGINT"/>
        <id column="rid" property="pid" javaType="long" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="table">
      sys_role_permission
    </sql>

    <sql id="columns">
        rid, pid
    </sql>

    <sql id="values">
        #{rid}, #{pid}
    </sql>

    <!--相等条件-->
    <sql id="condition_equal">
        WHERE 1 = 1
        <if test="entity != null">
            <if test="entity.rid!=null">AND rid = #{entity.rid}</if>
            <if test="entity.pid!=null">AND pid = #{entity.pid}</if>
        </if>
    </sql>

    <insert id="create" parameterType="com.main.activity.model.RolePermission">
        INSERT INTO <include refid="table"/>
        (<include refid="columns"/>)
        VALUES
        (<include refid="values"/>)
    </insert>

    <!--批量插入角色与权限关联关系-->
    <insert id="createBatch">
        INSERT INTO <include refid="table"/>
        (<include refid="columns"/>)
        VALUES
        <foreach collection="pids" item="pid" separator=",">
            (#{rid},#{pid})
        </foreach>
    </insert>

    <!--根据角色id删除与权限的关联数据-->
    <delete id="deleteByRid" parameterType="Long">
        DELETE FROM <include refid="table"/>
        WHERE rid = #{rid}
    </delete>

    <!--根据权限id删除与角色的关联数据-->
    <delete id="deleteByPid" parameterType="Long">
        DELETE FROM <include refid="table"/>
        WHERE pid = #{pid}
    </delete>

</mapper>